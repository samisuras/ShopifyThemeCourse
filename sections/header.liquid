<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        {% for link in linklists.main-menu.links %}
          {% assign child_list_handle = link.title | handle %}
          {% if linklists[child_list_handle] != blank %}
          <li class="nav-item"><a class="nav-link" {% if link.active %} class="active" {% endif %} href="{{link.url}}">{{link.title}}</a></li>
            [{% for childlink in linklists[child_list_handle].links %}
              <li class="nav-item"><a class="nav-link" {% if link.active %} class="active" {% endif %} href="{{childlink.url}}">{{childlink.title | escape }}</a></li>
            {% endfor %}]
            {% else %}
              <li class="nav-item"><a class="nav-link" {% if link.active %} class="active" {% endif %} href="{{link.url}}">{{link.title}}</a></li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
</nav>